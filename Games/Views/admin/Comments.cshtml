@model IEnumerable<Games.Models.comment>

@{
    ViewBag.Title = "Comments";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("Admin home", "Index", null, new { @class = "mybtn" })
    @Html.ActionLink("Add New Game", "Create", null, new { @class = "mybtn" }) |

</p>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
               Comment
            </th>
            <th>
            Date
            </th>
            <th>
Rating
            </th>
            <th>
               Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comment1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.game.title)
                </td>
                <td>

                    @Html.ActionLink("Delete", "DeleteComment", new { id = item.Id },new { @class = "mybtn" })
                </td>
            </tr>
        }
    </tbody>
</table>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
    <script>
    $(document).ready(function () {
            $('#myTable').DataTable();
        });</script>
